{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "api": ["../../common/types/api"]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/deepstream.io-client-ks/src"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "../common/types/api/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ]
}
