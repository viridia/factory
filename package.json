  "description": "Render farm implementation based on Kubernetes and RethinkDB",
  "main": "index.js",
  "author": "Talin <viridia@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build-image-mandlebrot": "cd images/mandlebrot && docker build --rm -f Dockerfile -t mandlebrot:0.0.1 .",
    "director": "ts-node ./director/src/index.ts",
    "start-client": "cd client && node devServer.js",
    "start-director": "nodemon --exec ./node_modules/.bin/ts-node -- ./director/src/index.ts",
    "start-scheduler": "nodemon --exec ./node_modules/.bin/ts-node -- ./scheduler/src/index.ts",
    "scheduler": "ts-node ./scheduler/src/index.ts",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register common/**/*.spec.ts",
    "test-watch": "mocha -w --compilers ts:ts-node/register,tsx:ts-node/register common/**/*.spec.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.14",
    "@types/winston": "^2.3.2",
    "certainty": "^1.3.1",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.1.0",
    "tslint-react": "^3.0.0"
  },
