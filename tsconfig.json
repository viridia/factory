{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/deepstream.io-client-ks/src"
    ]
  },
  "include": [
    "common/src/**/*",
    "director/src/**/*",
    "scheduler/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
